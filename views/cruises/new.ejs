<%- include('../partials/header-pre-link') %>
<link rel="stylesheet" href="/stylesheets/cruises/newcruise.css" />
<%- include('../partials/header-post-link') %>


<form class="fadein" id="new-cruise-form" action="/cruises" method="POST">
    <h1>Add New Cruise</h1>
    <label>Cruise Title:</label>
    <input type="text" name="title" maxlength="30" placeholder="'Disney Hawaiian from Honolulu'" required />

    <label>Number of Days:</label>
    <input type="number" name="numDays" max="21" required>

    <label>Cruise Line:</label>
    <select name="cruiseLine">
        <option value="Disney">Disney</option>
        <option value="Princess">Princess</option>
        <option value="Royal Caribbean">Royal Caribbean</option>
        <option value="Carnival">Carnival</option>
        <option value="Celebrity">Celebrity</option>
    </select>
    
    <label>Cruise Boat:</label>
    <input type="text" name="cruiseBoat" required>

    <label>Embarkation Date:</label>
    <input type="date" name="startDate" required>

    <label>Disembarkation Date:</label>
    <input type="date" name="endDate" required>

    <label>Itinerary:</label>
    <input type="text" name="itinerary" maxlength="50" placeholder="'Eastern Caribbean'" required>

    <label>Notes About This Cruise:</label>
    <textarea name="notes" rows="4" cols="50" placeholder="'Halloween on the High Seas! Sydney's first cruise with us.'" required></textarea>
    
    <div id="button-holder">
        <input type="reset" value="Clear Form">
        <input type="submit" value="Add Cruise">    
    </div>
</form>

<%- include('../partials/footer') %>